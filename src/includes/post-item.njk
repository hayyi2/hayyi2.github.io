{% from "content.njk" import displayContent %}

<div class="mb-8">
    {% if post.data.thumbnail %}
        <div class="md:hidden py-2">
            <a href="{{ post.url }}">
                <img src="{{ post.data.thumbnail }}" alt="{{ post.data.title }}" class="rounded-lg aspect-1/2">
            </a>
        </div>
    {% endif %}
    <div class="flex">
        <div>
            <a href="{{ post.url }}" class="text-gray-800 hover:underline">
                <h4 class="text-lg font-semibold mb-2">
                    {{ post.data.title }}
                </h4>
            </a>
            <div class="mb-2 text-gray-500 text-sm">
                <div class="inline-flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1 icon icon-tabler icon-tabler-calendar-event" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                        <path d="M4 5m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z"></path>
                        <path d="M16 3l0 4"></path>
                        <path d="M8 3l0 4"></path>
                        <path d="M4 11l16 0"></path>
                        <path d="M8 15h2v2h-2z"></path>
                    </svg>
                    <span>{{ post.data.date | dateFormat }}</span>
                </div>
                {% if post.data.categories.length %}
                    <div class="inline-flex ml-2 items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1 icon icon-tabler icon-tabler-tags" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                            <path d="M7.859 6h-2.834a2.025 2.025 0 0 0 -2.025 2.025v2.834c0 .537 .213 1.052 .593 1.432l6.116 6.116a2.025 2.025 0 0 0 2.864 0l2.834 -2.834a2.025 2.025 0 0 0 0 -2.864l-6.117 -6.116a2.025 2.025 0 0 0 -1.431 -.593z"></path>
                            <path d="M17.573 18.407l2.834 -2.834a2.025 2.025 0 0 0 0 -2.864l-7.117 -7.116"></path>
                            <path d="M6 9h-.01"></path>
                        </svg>
                        <ul class="inline-flex">
                            {% for category in post.data.categories %}
                                <li class="flex">
                                    <a href="{{ "/blog/kategori/"+(category | slugify) + "/" | url }}" class="hover:underline">{{ category }}</a>
                                    {% if not loop.last %}
                                        <span>,&nbsp; </span>
                                    {% endif %}
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}
            </div>
            {% if post.data.excerpt %}
                <div>
                    {{ displayContent(post.data.excerpt) | safe }}
                </div>
            {% endif %}
        </div>
        {% if post.data.thumbnail %}
            <div class="ml-6 hidden md:flex md:items-center">
                <a href="{{ post.url }}">
                    <img src="{{ post.data.thumbnail }}" alt="{{ post.data.title }}" class="rounded-lg aspect-[2/1]">
                </a>
            </div>
        {% endif %}
    </div>
</div>