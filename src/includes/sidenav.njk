<div class="md:sticky md:top-12 select-none">
    <div class="mb-4 md:mb-6">
        <a href="{{ "/" | url }}">
            <img src="/assets/logo.svg" class="h-16 md:h-20 w-auto" alt="logo">
        </a>
    </div>
    <div class="mb-4 md:mb-6">
        <nav class="-mx-2">
            <ul class="space-y-0 md:space-y-1 flex flex-row md:flex-col flex-wrap">
                {% for item in collections.all | eleventyNavigation %}
                    {% set active = "bg-gray-300 text-gray-800" if item.url == page.url or(item.url != '/' and item.url in page.url) else "text-gray-500 hover:text-gray-800 hover:bg-gray-200" %}
                    <li class="flex">
                        <a href="{{ item.url }}" class="{{ active }} inline-flex items-center px-2 py-1 text-base font-medium rounded-md mr-1">
                            {% if item.icon %}
                                <span class="mr-2">{% include "icons/" + item.icon + ".html" %}</span>
                            {% endif %}
                            {{ item.title }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </nav>
    </div>
    <div class="hidden md:block mb-4 md:mb-6 -mx-1.5">
        <ul class="flex">
            {% if metadata.contact.github %}
                <li>
                    <a href="{{ metadata.contact.github.url }}" target="_blank" class="p-1.5 text-gray-500 hover:text-gray-800 hover:bg-gray-200 inline-block rounded-md">
                        {% include "icons/brand-github.html" %}
                    </a>
                </li>
            {% endif %}
            {% if metadata.contact.whatsapp %}
                <li>
                    <a href="{{ "https://wa.me/" + metadata.contact.whatsapp.number }}" target="_blank" class="p-1.5 text-gray-500 hover:text-gray-800 hover:bg-gray-200 inline-block rounded-md">
                        {% include "icons/brand-whatsapp.html" %}
                    </a>
                </li>
            {% endif %}
        </ul>
    </div>
</div>
